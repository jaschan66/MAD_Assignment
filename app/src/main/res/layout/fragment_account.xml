<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AccountFragment">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/accountImg"
                    android:layout_width="8dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/accountimg"
                    tools:ignore="ImageContrastCheck"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/lblAccName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/questrial"
                        android:paddingTop="30dp"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="XXX" />

                    <TextView
                        android:id="@+id/lblAccountRole"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/questrial"
                        android:textSize="16sp"
                        tools:text="XXX" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                app:layout_constraintStart_toEndOf="@+id/chkRmbMe"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword" />

            <TextView
                android:id="@+id/accountChgPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/password_icon"
                android:drawablePadding="11dp"
                android:fontFamily="@font/questrial"
                android:gravity="start|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/change_password"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accountChgPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/photo_icon"
                android:drawablePadding="16dp"
                android:fontFamily="@font/questrial"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/change_profile_photo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view20"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                app:layout_constraintStart_toEndOf="@+id/chkRmbMe"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword" />

            <TextView
                android:id="@+id/categoryMaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/nine_squares_icon"
                android:drawablePadding="14dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/category_maintenance"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationMaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rack_icon"
                android:drawablePadding="16dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/location_maintenance"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deliveryMaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/truck_icon"
                android:drawablePadding="14dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/delivery_maintenance"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stockMaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/warehouse_icon"
                android:drawablePadding="14dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/stock_maintenance"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view3"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/chkRmbMe"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/accountManageStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/satff_icon"
                android:drawablePadding="16dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="10dp"
                android:paddingTop="16dp"
                android:text="@string/manage_staff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:id="@+id/view15"
                android:layout_width="360dp"
                android:layout_height="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/grey"
                android:visibility="visible"
                app:layout_constraintStart_toEndOf="@+id/chkRmbMe"
                app:layout_constraintTop_toBottomOf="@+id/edtLoginPassword"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/acountLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/logout_icon"
                android:drawablePadding="11dp"
                android:fontFamily="@font/questrial"
                android:gravity="left|center_vertical"
                android:paddingStart="17dp"
                android:paddingTop="16dp"
                android:text="@string/logout"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>